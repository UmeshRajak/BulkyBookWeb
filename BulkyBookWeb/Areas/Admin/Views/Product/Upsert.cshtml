@model ProductVM

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient py-0">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">@(Model.productModel.ProductId!=0?"Update":"Create")Product</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row" enctype="multipart/form-data">
                <input asp-for="productModel.ProductId" hidden />
                <input asp-for="productModel.ImageUrl" hidden />

                <div class="row">
                    <div class="col-10">
                        <div class="border p-3">

                            <div class="form-floating py-3 col-12">
                                <label asp-for="productModel.Title" class="ms-2 text-muted"></label>
                                <input asp-for="productModel.Title" class="form-control border-0 shadow" />
                                <span asp-validation-for="productModel.Title" class="text-danger"></span>
                            </div>

                            <div class="py-3 col-12">
                                <textarea asp-for="productModel.Description" class="form-control border-0 shadow "></textarea>
                                <label asp-for="productModel.Description" class="ms-2"></label>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.ISBN" class="form-control border-0 shadow " />
                                <label asp-for="productModel.ISBN" class="ms-2"></label>
                                <span asp-validation-for="productModel.ISBN" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.Author" class="form-control border-0 shadow " />
                                <label asp-for="productModel.Author" class="ms-2"></label>
                                <span asp-validation-for="productModel.Author" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.ListPrice" class="form-control border-0 shadow " />
                                <label asp-for="productModel.ListPrice" class="ms-2"></label>
                                <span asp-validation-for="productModel.ListPrice" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.Price" class="form-control border-0 shadow " />
                                <label asp-for="productModel.Price" class="ms-2"></label>
                                <span asp-validation-for="productModel.Price" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.Price50" class="form-control border-0 shadow " />
                                <label asp-for="productModel.Price50" class="ms-2"></label>
                                <span asp-validation-for="productModel.Price50" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input asp-for="productModel.Price100" class="form-control border-0 shadow " />
                                <label asp-for="productModel.Price100" class="ms-2"></label>
                                <span asp-validation-for="productModel.Price100" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                @*<select asp-for="CategoryId" asp-items="@ViewData["CateList"] as IEnumerable<SelectListItem>" class="form-selecta border-0 shadow ">
                                <option disabled selected>--Select Category--</option>
                                </select>*@
                                @*<select asp-for="CategoryId" asp-items="ViewBag.CatList" class="form-select border-0 shadow ">
                                <option disabled selected>--Select Category--</option>
                                </select>*@

                                <select asp-for="@Model.productModel.CategoryId" asp-items="@Model.categoryList" class="form-select border-0 shadow ">
                                    <option disabled selected>--Select Category--</option>
                                </select>

                                <label asp-for="productModel.CategoryId" class="ms-2"></label>

                                <span asp-validation-for="productModel.CategoryId" class="text-danger"></span>
                            </div>

                            <div class="form-floating py-3 col-12">
                                <input type="file" name="file" class="form-control border-0 shadow " />
                                <label asp-for="productModel.ImageUrl" class="ms-2"></label>
                            </div>

                            <div class="row pt-2">
                                <div class="col-6 col-md-3">
                                    @if (Model.productModel.ProductId != 0 )
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Update</button>
                                    }
                                    else
                                    {
                                        <button type="submit" class="btn btn-primary form-control">Create</button>
                                    }
                                </div>

                                <div class="col-6 col-md-3">
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                                        Back to List
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-2">
                        <img src="@Model.productModel.ImageUrl" width="100%" style="border-radius:5px;" border:1px solid; color="#bbb9b9" />

                    </div>
                </div>



            </form>
        </div>
    </div>




@section scripts{ 
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | align lineheight | checklist numlist bullist indent outdent ',
           
        });
    </script>
 @{ 
        <partial name ="_validationScriptsPartial"/>
    }
}