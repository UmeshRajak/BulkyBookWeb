@model RollManagmentVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-0">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage User Role</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">

                <div class="form-floating py-3 col-12">
                    <input asp-for="applicationUser.Name" readonly class="form-control border-0 shadow " />
                    <label asp-for="applicationUser.Name" class="ms-2"></label>

                    <span asp-validation-for="applicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-3 col-12">
                    <select asp-for="applicationUser.Role" asp-items="@Model.RoleList"></select>
                </div>
                <div class="form-floating py-3 col-12">
                    <select asp-for="applicationUser.CompanyId" asp-items="@Model.CompanyList"></select>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update Role</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-Action="Index" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>




@section scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}
